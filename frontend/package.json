{
  "name": "eng-read-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Eng Read Frontend - 英语阅读学习平台前端应用",
  "author": "Eng Read Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:component": "vitest run --config vitest.component.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "lighthouse-ci run",
    "test:accessibility": "axe src --chrome-options.args=\"--headless=new\"",
    "test:types": "tsc --noEmit",
    "test:format": "prettier --check src/",
    "test:lint": "eslint src --ext .ts,.tsx",
    "test:all": "npm run test:types && npm run test:lint && npm run test:format && npm run test:coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.1",
    "@tanstack/react-query": "^4.32.6",
    "@tanstack/react-query-devtools": "^4.41.0",
    "axios": "^1.5.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.4",
    "immer": "^10.0.2",
    "lucide-react": "^0.279.0",
    "react": "^18.2.0",
    "react-audio-player": "^0.17.0",
    "react-circular-progressbar": "^2.1.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.4",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.2",
    "react-router-dom": "^6.15.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.2",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.7.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@playwright/test": "^1.38.0",
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-docs": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/react": "^7.3.2",
    "@storybook/react-vite": "^7.3.2",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "autoprefixer": "^10.4.15",
    "axe-core": "^4.8.2",
    "chromatic": "^7.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-testing-library": "^6.0.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lighthouse-ci": "^1.13.1",
    "lint-staged": "^14.0.1",
    "msw": "^1.3.0",
    "msw-storybook-addon": "^1.9.0",
    "postcss": "^8.4.28",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "storybook": "^7.3.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^0.34.4",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
