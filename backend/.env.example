# 环境配置示例文件
# 复制此文件为 .env 并根据实际情况修改配置

# Flask 环境配置
FLASK_ENV=development
FLASK_APP=run.py

# 应用配置
SECRET_KEY=your-secret-key-change-in-production
PORT=5000

# 数据库配置
DATABASE_URL=sqlite:///eng_read.db
# 生产环境使用 PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/eng_read

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 日志配置
LOG_LEVEL=INFO

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=200 per day

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# 开发环境数据库（可选）
DEV_DATABASE_URL=sqlite:///eng_read_dev.db

# 预发布环境数据库（可选）
STAGING_DATABASE_URL=postgresql://username:password@localhost:5432/eng_read_staging