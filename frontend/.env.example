# 应用配置
VITE_APP_NAME=Eng Read
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=英语阅读学习平台

# API 配置
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# 环境配置
NODE_ENV=development
VITE_ENV=development

# 功能开关
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# 第三方服务
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# 认证配置
VITE_JWT_SECRET=your-jwt-secret
VITE_TOKEN_REFRESH_INTERVAL=300000

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav

# 缓存配置
VITE_CACHE_TTL=300000
VITE_ENABLE_OFFLINE=true

# 性能配置
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_SOURCE_MAP=true

# 学习配置
VITE_DEFAULT_DAILY_GOAL=20
VITE_DEFAULT_SESSION_SIZE=10
VITE_MAX_SESSION_SIZE=50

# 通知配置
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_SOUND_EFFECTS=true

# 主题配置
VITE_DEFAULT_THEME=light
VITE_ENABLE_SYSTEM_THEME=true

# 本地存储配置
VITE_STORAGE_PREFIX=engread_
VITE_ENABLE_ENCRYPTION=false

# 开发配置
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_ENABLE_HTTPS=false

# 生产配置
VITE_CDN_URL=
VITE_STATIC_URL=
VITE_ENABLE_SERVICE_WORKER=true

# 监控配置
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_USER_BEHAVIOR_TRACKING=false

# 实验性功能
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_ENABLE_BETA_FEATURES=false

# 调试配置
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn

# 安全配置
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true