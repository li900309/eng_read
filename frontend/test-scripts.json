{
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:component": "vitest run --config vitest.component.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "lighthouse-ci run",
    "test:accessibility": "axe src --chrome-options.args=\"--headless=new\"",
    "test:types": "tsc --noEmit",
    "test:format": "prettier --check src/",
    "test:lint": "eslint src --ext .ts,.tsx",
    "test:all": "npm run test:types && npm run test:lint && npm run test:format && npm run test:coverage"
  },
  "coverage": {
    "provider": "v8",
    "reporter": ["text", "json", "html", "lcov"],
    "exclude": [
      "node_modules/",
      "src/test/",
      "**/*.d.ts",
      "**/*.config.*",
      "**/dist/**",
      "**/coverage/**"
    ],
    "thresholds": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "components": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "hooks": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      },
      "pages": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "testEnvironment": {
    "jsdom": {
      "url": "http://localhost:3000",
      "userAgent": "Mozilla/5.0 (compatible; vitest)",
      "referrer": "http://localhost:3000",
      "screen": {
        "width": 1024,
        "height": 768
      }
    }
  },
  "componentTesting": {
    "viewport": {
      "width": 1024,
      "height": 768
    },
    "themes": ["light", "dark"],
    "responsiveness": ["xs", "sm", "md", "lg", "xl"]
  },
  "e2e": {
    "baseUrl": "http://localhost:3000",
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "browsers": ["chromium", "firefox", "webkit"],
    "timeout": 10000,
    "retries": 2
  },
  "performance": {
    "budgets": {
      "firstContentfulPaint": 2000,
      "largestContentfulPaint": 4000,
      "cumulativeLayoutShift": 0.1,
      "totalBlockingTime": 200,
      "speedIndex": 3000
    }
  },
  "accessibility": {
    "rules": {
      "color-contrast": { enabled: true },
      "image-alt": { enabled: true },
      "label": { enabled: true },
      "link-name": { enabled: true },
      "list": { enabled: true },
      "listitem": { enabled: true }
    }
  }
}